@import '../../styles/index.styl';
body,html
  size(100%, 100%)
  max-width 1500px
  margin 0 auto
  overflow hidden
#app
  size(100%, 100%)
  display flex
  flex-direction column
  header
    size(100%, 45px)
    padding 0 21px
    box-sizing border-box
    background #000000
    display flex
    flex-direction row
    justify-content flex-end
    align-items center
    img.avator
      size(24px, 24px)
      border-radius radius
    span.name
      height 20px
      font-size 14px
      font-family PingFangSC-Medium,PingFang SC
      color #fff
      font-weight bold
      line-height 20px
  main
    flex 1
  footer
    size(100%, 66px)
    background #000000
    ul
      display flex
      flex-direction row
      height 100%
      li
        flex 1
        display flex
        justify-content center
        align-items center
        flex-direction column
        img
          width 23px
        p.desc
          height 17px
          font-size 12px
          font-family PingFangSC-Regular,PingFang SC
          color #ffffff
          line-height 17px