@import '../../styles/index.styl';
body,html
  size(100%, 100%)
  max-width 1500px
  margin 0 auto
  overflow hidden
  // background #000000
#app
  size(100%, 100%)
  display flex
  flex-direction column
  position relative
  header
    size(100%, 45px)
    padding 0 21px
    box-sizing border-box
    background #000000
    display flex
    flex-direction row
    justify-content flex-end
    align-items center
    img.avator
      size(24px, 24px)
      border-radius radius
    span.name
      height 20px
      font-size 14px
      max-width 80px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      font-family PingFangSC-Medium,PingFang SC
      color #fff
      font-weight bold
      line-height 20px
  main
    flex 1
    .swiper-container
      size(100%, 100%)
      .swiper-slide
        height 100%
  .space
    size(100%, 66px)
    background #000000
  footer
    width 100%
    min-height 66px
    absolute(bottom 0 left 0 right 0)
    z-index 9990
    .content
      size(100%, 71px)
      background-color rgb(0,0,0)
      background rgba(0,0,0,0.6)
      font-size 14px
      color #ffffff
      padding 15px 44px 8px 20px
      box-sizing border-box
      .icon
        padding-top 8px
        span
          padding-right 8px
    ul
      display flex
      flex-direction row
      height 100%
      height 66px
      background #000000
      li
        flex 1
        display flex
        justify-content center
        align-items center
        flex-direction column
        img
          width 23px
        p.desc
          height 17px
          font-size 12px
          font-family PingFangSC-Regular,PingFang SC
          color #ffffff
          line-height 17px
  .Modal
    fixed(left 0 right 0 bottom 66px top 0)
    z-index 9999
    background url('../../assets/tu_show/float@2x.png') no-repeat center center
    background-size 100% 100%
    img
      width 100%
    .btn
      width 108px 
      height 34px 
      background rgba(0,0,0,1) 
      border-radius 7px 
      border 1px solid rgba(255,255,255,1)
      margin auto
      absolute(bottom 23px left 0 right 0)
      p
        height 25px
        text-align center
        margin-top 5px
        font-size 18px 
        font-family PingFangSC-Regular,PingFang SC 
        font-weight 400 
        color rgba(255,255,255,1) 
        line-height 25px 
.fade-enter-active, .fade-leave-active
  transition opacity .8s
.fade-enter, .fade-leave-to
  opacity 0
