@import '../../styles/index.styl';
body,html
  size(100%, 100%)
  overflow hidden
  display flex
  justify-content center
  align-items center
#app
  max-width 414px
  max-height 667px
  overflow hidden
  margin 0 auto
  display flex
  flex-direction column
  position relative
  background #000000
  .tu__space__top
    size(100%, 45px)
    background #000000
  .tu__header
    size(100%, 45px)
    padding 0 21px
    absolute(top 0 left 0)
    z-index 9990
    box-sizing border-box
    background #000000
    display flex
    flex-direction row
    justify-content flex-end
    align-items center
    img.avator
      size(24px, 24px)
      border-radius 12px
      margin-right 6px
    span.name
      height 20px
      font-size 14px
      max-width 188px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      font-family PingFangSC-Medium,PingFang SC
      color #fff
      font-weight bold
      line-height 20px
  .tu__main
    flex 1
    .swiper-container
      size(100%, 100%)
      .swiper-slide
        height 100%
        display flex
        justify-content center
        align-items: center
        img
          width 100%
          display inline-block
  .tu__space
    size(100%, 66px)
    background #000000
  .tu__footer
    width 100%
    min-height 66px
    absolute(bottom 0 left 0 right 0)
    z-index 9990
    .content
      width 100%
      min-height 71px
      background-color rgb(0,0,0)
      background rgba(0,0,0,0.6)
      font-size 14px
      color #ffffff
      padding 15px 44px 8px 20px
      box-sizing border-box
      .icon
        padding-top 8px
        span
          padding-right 8px
      .number_all
        max-width 220px
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        .imgsnums
          padding-right 5px
    ul
      display flex
      flex-direction row
      height 100%
      height 66px
      background #000000
      li
        flex 1
        display flex
        justify-content center
        align-items center
        flex-direction column
        img
          width 23px
        p.desc
          height 17px
          font-size 12px
          font-family PingFangSC-Regular,PingFang SC
          color #ffffff
          line-height 17px
  .Modal
    absolute(left 0 right 0 bottom 66px top 0)
    z-index 9999
    background url('../../assets/tu_show/float@2x.png') no-repeat center center
    background-size 100% 100%
    img
      width 100%
    .btn
      width 108px 
      height 34px 
      background rgba(0,0,0,1) 
      border-radius 7px 
      border 1px solid rgba(255,255,255,1)
      margin auto
      absolute(bottom 23px left 0 right 0)
      p
        height 25px
        text-align center
        margin-top 5px
        font-size 18px 
        font-family PingFangSC-Regular,PingFang SC 
        font-weight 400 
        color rgba(255,255,255,1) 
        line-height 25px 
.swiper-button-next, .swiper-container-rtl .swiper-button-prev,.swiper-button-prev, .swiper-container-rtl .swiper-button-next
  top 0
  width 100px 
  height 100%
.swiper-button-next:after, .swiper-container-rtl .swiper-button-prev:after,.swiper-button-prev:after, .swiper-button-next:after
    content ''!important
.fade-enter-active, .fade-leave-active
  transition opacity .8s
.fade-enter, .fade-leave-to
  opacity 0
