body, html{
  background #fff !important
  margin 0
}
#publish
  width 100%
  position absolute
  top 0
  .score-box
    .score-tip
      font-size 13px
      color #333333
      text-align center
      font-weight bold
      padding-top 20px
    .score-five
      display flex
      box-sizing border-box
      align-items center
      justify-content center
      margin-top 10px
      .score-item
        width 30px
        height 30px
        margin-right 17px
        background url('../../assets/community/unscore.png') no-repeat center center/100% 100%
        &:last-of-type
          margin 0
        &.active
          background url('../../assets/community/scored.png') no-repeat center center/100% 100%
        &.is-half-star
          &::before
            content ''
            position absolute
            width 15px
            height 30px
            background url('../../assets/community/scored.png') no-repeat left top/cover
            margin-top -1px
  .title
    width 100%
    box-sizing border-box
    margin-top 19px
    height 50px
    line-height 50px
    border-top 1px solid #f4f4f4
    background #fff
    padding 0
    font-weight 400
    display flex
    input
      width 100%
      box-sizing border-box
      border none
      outline none
      font-size 16px
      color #333333
      padding 0 20px
      &::placeholder
        color #bbbbbb
  .box
    width 100%
  &.active
      position fixed
      left 0
      bottom 0
    .publish-textarea-box
      position relative
      width 100%
      height 225px
      box-sizing border-box
      padding 10px 20px
      border-top 1px solid #f4f4f4
      border-bottom 1px solid #f4f4f4
      .publish-textarea
        height 186px
        -webkit-user-select:text
        font-size 14px
        overflow scroll
        box-sizing border-box
        img
          max-width 80%
          display block
          margin 0 auto
      .publis-textarea-input
        position absolute
        font-size 12px
        color #BBBBBB
        text-align right
        top 200px
        right 20px
    .upload
      font-size 16px
      padding 10px
      .input
        width 20px 
        height 17px
        background url('../../assets/community/upload_icon.png') no-repeat center center/100% 100%
        input
          opacity 0
          color #fff
          width 100%
          height 100%
    .upload-img
      margin 20px 0 0 20px
      width 115px
      height 115px
      background url('../../assets/community/upload.png') no-repeat center center/100% 100%
          
    

.publish-textarea:empty:not(:focus):before {
  // content: '-写下你的想法吧 \A-有配图会有更多人点赞';
  content: '-写下你的想法吧';
  white-space: pre;
  color: #BBBBBB;
  font-size: 14px;
}
