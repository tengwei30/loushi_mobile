#wrapper
  width 100%
  height 100vh
  overflow hidden
  background #ffffff
  #reply-detail
    color #333333
    width 100%
    height auto
    box-sizing border-box
    ovflow auto
    .reply-box
      width 100%
      border-top 10px solid #f4f4f4
      padding-bottom 48px
      box-sizing border-box
      .reply-all-title
        font-size 16px
        padding 20px 0 0 20px
        span
          color #333333
          font-size 10px
      .reply-tip
        font-size 14px
        font-weight 400
        color #999999
        text-align center
        padding 10px 0 18px
      .no-reply
        font-size 16px
        color #999999
        margin-top 132px
        text-align center


.clearfix
  &:before
    content ''
    display table
