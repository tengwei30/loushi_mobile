.video-vote-scroll
  width 100%
  height 100vh
  font-size 15px
  box-sizing border-box
  text-align center
  overflow hidden
  .video-vote-bg
    background url('../../assets/video_vote/vote_bg.png') no-repeat top center/375px 223px
    background-color #997AFA
    padding-top 105px
    padding-bottom 20px
    .video-count-time
      font-size 26px
      color #ffffff
      transform scale(0.5)
      transform-origin left top
      margin 0 auto 0
      position absolute
      display flex
      justify-content center
      align-items center
      width 750px
      white-space nowrap
      .video-count-time-item
        width 42px
        height 42px
        line-height 42px
        text-align center
        color #B080F8
        margin 0 10px
        background #ffffff
        border-radius 4px
        display inline-block
    .video-tip
      width 275px
      height 38px
      background url('../../assets/video_vote/vote_tip.png') top center/100% 100%
      margin 40px auto 0
  .video-vote-rule-btn
    width 66px
    height 22px
    border-radius 22px 0 0 22px
    line-height 22px
    text-align center
    font-size 13px
    color #ffffff
    background rgba(0, 0, 0, 0.6)
    position fixed
    right 0
    top 15px
  .video-vote-number
    color #ffffff
    background rgba(0, 0, 0, 0.6)
    position fixed
    right 0
    top 52px
    line-height 18px
    font-size 13px
    text-align right
    border-radius 100px 0 0 100px
    width 66px
    padding 3px 0
    .video-vote-number-box
      display inline-block
      padding-right 2px
      text-align center
  .video-vote-draw
    position fixed
    right 0
    bottom 110px
    background url('../../assets/video_vote/vote_draw.png') center/100%
    width 80px
    height 80px
    z-index 22
      

