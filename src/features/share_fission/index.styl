.grow-fission
  // size(100%, 100%)
  background-color #26253E
  color #ffffff
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow auto
  box-sizing border-box
  padding-bottom 1rem
  .list-box
    size(253px,39px)
    position absolute
    overflow hidden
    top 25px
    left 50%
    transform translateX(-50%)
    background-color #0B0A26
    border-radius 19.5px
