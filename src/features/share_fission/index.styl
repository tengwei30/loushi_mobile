@keyframes li_move {
  0% {
      transform: translateY(0%);
  }
  100% {
      /* 此处50px 与上面设置的高度相对应 */
      transform: translateY(calc((100% - 39px)*-1));
  }
}
body, html
  // size(100%, 100%)
#app
