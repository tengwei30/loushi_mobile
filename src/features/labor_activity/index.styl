#app
  .labor
    width 100%
    min-height 700px
    background url('../../assets/labor_activity/bg.png') no-repeat top center/cover
    padding-top 46px
    box-sizing border-box
    font-family Adobe Heiti Std
    .labor-rule
      width 64px
      height 19px
      line-height 19px
      text-align center
      background-color #39702D
      border-radius 0 9px 9px 0
      font-size 13px
      color #ffffff
      position absolute
      top 28px
      left 0
    .labor-top
      width 100%
      text-align center
      font-size 0
      img
        size(290px, 90px)
    .labor-money-box
      size(349px, 234px)
      background url('../../assets/labor_activity/money_box_bg.png') no-repeat top center/100% 100%
      margin 249px auto 0
      box-sizing border-box
      padding-top 46px
      .labor-money-tip
        font-size 16px
        color #F69A07
        font-weight bold
        text-align center
        line-height 1
        span
          color #3D6F30
          font-family Adobe Heiti Std
      .labor-members
        font-size 18px
        color #666666
        text-align center
        margin-top 13px
        line-height 1
      .labor-money-number
        size(284px, 128px)
        background url('../../assets/labor_activity/money_bg.png') no-repeat top center/100% 100%
        box-sizing border-box
        margin 0 auto
        font-size 40px
        font-family Source Han Sans CN
        font-weight bold
        color #F69907
        text-align center
        line-height 128px
