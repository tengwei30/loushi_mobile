body, html
  width 100%
  height 100%
  margin 0
  padding 0
*
  margin 0
  padding 0
#debris_app
  size(100%, 100%)
  header
    width 100%
    min-height 372px
    background url('../../assets/debris_center/header_bg@2x.png') no-repeat top center/100%
    background-size 100% 244px
    padding-top 124px
    box-sizing border-box
    .award_list_root
      width 346px
      min-height 248px
      margin 0 auto
      background url('../../assets/debris_center/award_bg.png') no-repeat center center/100%
      background-size 100% 100%
      border-radius 20px
      position relative
      h3.header_title
        size(245px, 43px)
        font-size 18px
        font-family PingFangSC-Medium, PingFang SC
        font-weight 500
        color #8D3000
        line-height 43px
        background url('../../assets/debris_center/award_title_bg.png') no-repeat center center/100%
        background-size 100% 100%
        text-align center
        absolute(top -28px left 49px)
      ul.award_list
        padding 39px 41px 16px 45px
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content space-between
        li.single_award
          width 110px
          min-height 150px
          padding-bottom 10px
          .img_show
            size(110px 134px)
            background #FFFFFF
            box-shadow 0px 3px 6px 0px rgba(252, 139, 58, 0.17)
            border-radius 6px
            border 2px solid #FCAB1B
          .single_award_title
            height 17px
            font-size 12px
            font-family PingFangSC-Medium, PingFang SC
            font-weight 500
            color #8D3E1B
            line-height 17px
            text-align center
            padding 10px 0
          .single_award_progress
            width 72px
            height 22px
            background #FFE3CA
            border-radius 11px
            box-sizing border-box
            border 1px solid #FCAB1B
            margin 0 auto
            color #FCAB1B
            font-size 12px
            text-align center
            line-height 22px
            position relative
            &before
              content ''
              absolute(top -1px left -1px)
              z-index 10
              width 59px
              height 22px
              background linear-gradient(245deg, #FFA34B 0%, #F44004 71%, #FF5537 100%)
              border-radius 11px
            .default_progress
              absolute(top 0 left 26px)
              z-index 12
              color #ffffff
  .sign_module
    .sign_img
      width 100%
      height auto
      display flex 
      flex-direction row
      flex-wrap wrap
      img
        size(48px 48px)
        display inline-block
        margin-right 14px
        margin-bottom 15px
        &:nth-of-type(5n)
          margin-right 0
    .sign_day_num
      text-align center
      height 17px
      font-size 12px
      font-family PingFangSC-Regular, PingFang SC
      font-weight 400
      color #DA1806
      line-height 17px
  .task_module
    ul.task_list
      li.single_task
        display flex 
        flex-direction row
        justify-content space-between
        padding-bottom 15px
        .task_name        
          height 20px
          font-size 14px
          font-family PingFangSC-Regular, PingFang SC
          font-weight 400
          color #333333
          line-height 20px
        .task_state
          size(74px 22px)
          font-size 12px
          font-family PingFangSC-Regular, PingFang SC
          font-weight 400
          color #FFFFFF
          line-height 22px
          text-indent 10px
          background url('../../assets/debris_center/default_task.png') no-repeat center center/100%
          background-size 100% 100%
          position relative
          &::after
            content ''
            absolute(right -1px top 0)
            size(24px 24px)
            background url('../../assets/debris_center/debris_icon.png') no-repeat center center/100%
            background-size 100% 100%
  
