body, html
  width 100%
  height 100%
  margin 0
  padding 0
*
  margin 0
  padding 0
.task_state, .single_book_btn
  width 66px
  line-height normal
  padding 5px 0
  box-sizing border-box
  background linear-gradient(235deg, #FFC87A 0%, #F43A3A 100%)
  border-radius 15px
  text-align center
  font-size 12px
  color #FFFFFF
  font-family PingFangSC-Regular, PingFang SC
#debris_app
  size(100%, 100%)
  p.header_right_record,p.header_right_record_rule
    font-size 12px
    height 17px
    font-weight bold
    line-height 17px
    fixed(right 0px top 32px)
    min-width 60px
    height 22px
    color #8D3000
    opacity 0.43
    background #FFECDB
    border-radius 14px 0 0 14px
    text-align center
    line-height 22px
    z-index 9999
  p.header_right_record_rule
    fixed(right 0px top 59px)
  header
    width 100%
    min-height 372px
    background url('../../assets/debris_center/header_bg@2x.png') no-repeat top center/100%
    background-size 100% 244px
    vertical-align middle
    padding-top 124px
    box-sizing border-box
    .header_space
      fixed(left 0 right 0 top 0)
      size(100%, 58px)
      border none
      background linear-gradient(235deg, #FFC87A 0%, #F43A3A 100%)
      z-index 9990
      overflow hidden
    .header_nav
      fixed(left 0px right 0px top 29px)
      width 100%
      padding 0 15px
      box-sizing border-box
      z-index 9995
      height 28px
      text-align center
      font-size 16px
      color #FFFFFF
      line-height 28px
      font-weight bold
      .header_back
        size(28px, 28px)
        background-position center center
        background-repeat no-repeat
        background-size 100% 100%
        absolute(left 15px top 0)
    .award_list_root
      width 346px
      min-height 248px
      margin 0 auto
      background url('../../assets/debris_center/award_bg.png') no-repeat center center/100%
      background-size 100% 100%
      border-radius 20px
      position relative
      h3.header_title
        size(245px, 43px)
        font-size 18px
        font-family PingFangSC-Medium, PingFang SC
        font-weight 500
        color #8D3000
        line-height 43px
        background url('../../assets/debris_center/award_title_bg.png') no-repeat center center/100%
        background-size 100% 100%
        text-align center
        absolute(top -28px left 49px)
      .award_list
        padding 39px 42px 16px 42px
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content space-between
        positon relative
        .click_more_award
          height 12px
          font-size 12px
          font-family PingFangSC-Medium, PingFang SC
          font-weight bold
          color #8D3E1B
          line-height 12px
          position absolute
          right 14px
          top 20px
  .sign_module
    width 346px
    margin 20px auto 0
    .sign_img
      width 100%
      height auto
      display flex
      flex-direction row
      flex-wrap wrap
      img
        size(48px 48px)
        display inline-block
        margin-right 14px
        margin-bottom 15px
        &:nth-of-type(5n)
          margin-right 0
    .sign_day_num
      text-align center
      height 17px
      font-size 12px
      font-family PingFangSC-Regular, PingFang SC
      font-weight 400
      color #DA1806
      line-height 17px
  .task_module
    width 346px
    margin 20px auto
    ul.task_list
      li.single_task
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        height 40px
        margin-bottom 15px
        .task_name
          height 20px
          font-size 14px
          font-family PingFangSC-Regular, PingFang SC
          font-weight 400
          color #8D3000
          line-height normal
      li.single_task:last-child
        margin-bottom 0
  .award_center_list
    width 346px
    margin 20px auto 0
  .modal_activity
    fixed(top 0 left 0 right 0 bottom 0)
    background rgba(0,0,0,0.45)
    z-index 9998
    .modal_activity_content
      min-width 243px
      min-height 131px
      absolute(top 225px left 68px)
      background #ffffff
      border-radius 12px
      &::before
        content ''
        size(50px 50px)
        background url('../../assets/debris_center/bukaixin-19@3x.png') no-repeat center center
        background-size 100% 100%
        absolute(top -25px left 97px)
      h3
        font-size 16px
        font-family PingFangSC-Regular, PingFang SC
        font-weight 400
        color #333333
        line-height 22px
        text-align center
        padding-top 44px
        box-sizing border-box
      .count__down
        padding-top 13px
        font-size 14px
        color #999999
        height 20px
        line-height 20px
        text-align center
  .signleBook_module
    width 346px
    margin 20px auto
    .single_book
      display flex
      flex-direction row
      justify-content space-between
      margin-bottom 20px
      .single_book_cover
        size(72px 95px)
        display inline-block
        border-radius 4px
      .single_book_btn
        align-self center
      .single_book_desc
        display flex
        flex-direction column
        justify-content flex-start
        padding 0 16px 0 10px
        width 162px
        position relative
        .single_book_title
          font-size 16px
          font-family PingFangSC-Medium, PingFang SC
          font-weight bold
          color #000000
        .single_book_info
          padding-top 10px
          width 100%
          font-size 14px
          font-family PingFangSC-Regular, PingFang SC
          color #999999
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical
        .single_book_class
          font-size 12px
          transform scale(0.8)
          font-family PingFangSC-Regular, PingFang SC
          color #999999
          absolute(left 6px bottom 0)
  .award_gift
    fixed(right 0 bottom 0)
    size(119px 117px)
    background url('../../assets/debris_center/award_gift.png') no-repeat center center
    background-size 100% 100%
  .new_person_guidance
    fixed(left 0 right 0 top 0 bottom 0)
    z-index 99999

