#comment-main
  width 100%
  box-sizing border-box
  font-size 12px
  padding 16px 20px 20px
  color #333333
  .author
    display flex
    align-items center
    img
      width 40px
      height 40px
      border-radius 50%
    span
      color #333333
      margin-left 9px
      width 200px
      font-size 14px
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
  .comment-title
    color #333333
    font-weight bold
    padding 20px 0 0
    font-size 14px
  .comment-content
    font-size 14px
    line-height 18px
    margin-top 12px
    .more
      color #FF5A00
      font-weight 400
  .comment-img
    width 100%
    height auto
    margin 20px 0 10px
  .comment-tip
    display flex
    align-items center
    justify-content space-between
    margin-top 10px
    .tip-left
      font-size 12px
      font-weight 400
      line-height 20px
      .comment-delete
        margin-left 17px
    .tip-right
      font-size 12px
      color #666666
      img
        width 15px
        height 15px
        margin-right 4px
        position relative
        top 1px