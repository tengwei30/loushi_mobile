#comment-main
  width 100%
  box-sizing border-box
  font-size 12px
  padding 16px 20px 20px
  .author
    display flex
    align-items center
    img
      width 40px
      height 40px
      border-radius 50%
    span
      color #333333
      font-weight bold
      margin-left 9px
      width 200px
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
  .comment-title
    color #333333
    font-weight bold