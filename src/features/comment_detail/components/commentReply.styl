.reply-item
  margin 20px 20px 0
  box-sizing border-box
  font-size 14px
  border-bottom 1px solid #F4F4F4
  padding-bottom 20px
  &.hide-border
    border none
  .top
    display flex
    align-items center
    justify-content space-between
    width 100%
    .top-left
      display flex
      box-sizing border-box
      width 100%
      img
        width 30px
        height 30px
        border-radius 30px
        margin-right 10px
        box-sizing border-box
      .user-info
        width 300px
        box-sizing border-box
        .user-name
          color #666666
          font-size 16px
          line-height 20px
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          width 295px
          span
            font-size 14px
            line-height 20px
            font-weight 400
            &:nth-of-type(1)
              color #333333
            &:nth-of-type(2)
              color #666666
            &:nth-of-type(3)
              color #999999
        .time
          font-size 12px
          color #BBBBBB
  .middle
    display flex
    padding-left 40px
    box-sizing border-box
    justify-content space-between
    margin-top 6px
    .reply-content
      width 100%
      font-size 14px
      line-height 20px
      &.ellipsis
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 3
        overflow hidden
      .more
        color #FF5A00
        font-weight 400
  .bottom
    margin-left 40px
    background-color #F4F4F4
    border-radius 4px
    box-sizing border-box
    padding 10px
    margin-top 10px
    .reply-list-more
      color #FF5A00
      font-size 14px
    .reply-list-item
      margin-bottom 10px
      word-break break-all
      &:last-of-type
        margin 0
      span
        font-size 14px
        line-height 20px
        font-weight 400
        &:nth-of-type(1)
          color #333333
        &:nth-of-type(2)
          color #666666
        &:nth-of-type(3)
          color #999999
        &:nth-of-type(4)
          color #666666
  .new-bottom
    display flex
    align-items center
    justify-content space-between
    padding-left 40px
    box-sizing border-box
    margin-top 12px
    .reply-delete
      font-size 12px
      color #999999
    .new-bottom-right
      display flex
      .reply-btn
        margin-right 20px
        width 16px
        height 15px
        background url('../../../assets/community/reply_icon.png') no-repeat center center/100% 100%
        position relative
        margin-top 2px
      .top-right
          font-size 12px
          color #666666
          img
            width 15px
            height 15px
            margin-right 4px
            position relative
            top 1px