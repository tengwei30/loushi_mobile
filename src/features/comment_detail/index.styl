body{
  margin 0
  padding 0
}
#wrapper
  width 100%
  height 100vh
  overflow hidden
  background #ffffff
  #comment
    color #333333
    width 100%
    height auto
    box-sizing border-box
    .comment-reply
      width 100%
      border-top 10px solid #f4f4f4
      padding-bottom 48px
      box-sizing border-box
      .comment-reply-title
        font-size 16px
        font-weight bold
        padding 20px 0 0 20px
      .reply-tip
        font-size 14px
        font-weight 400
        color #999999
        text-align center
        padding 10px 0 18px
        &.reply-tip-null
          margin-top 132px