.debris_mail_address
  padding 0 20px
  .debris_mail_address_item
    padding 20px 0
    border-bottom 1px solid rgba(228, 228, 228, 1)
    font-size 16px
    display flex
    align-items center
    .debris_mail_address_item_title
      color #666666
    .debris_mail_address_item_input
      color rgba(51, 51, 51, 1)
      border none
      margin-left 20px
      outline none
  .debris_mail_address_detail
    font-size 16px
    .debris_mail_address_detail_title
      color #666666
      padding 20px 0
    .debris_mail_address_detail_textarea
      width 100%
      height 70px
      outline none
      border none
      background rgba(248, 248, 248, 1)
      border-radius 4px
      resize none
      box-sizing border-box
      padding 10px
      &::-webkit-input-placeholder
        color #999999
  .debris_mail_address_btn
    width 250px
    height 42px
    line-height 42px
    border-radius 42px
    text-align center
    background linear-gradient(236deg, #FFC87A 0%, #F43A3A 100%)
    margin 20px auto 0
    font-size 16px
    color #ffffff
    &.is_disabled
      background #dddddd
  .debris_mail_address_rule
    margin-top 20px
    .debris_mail_address_rule_title
      font-size 16px
      font-weight 400
      color #666666
      padding 10px 0
    .debris_mail_address_rule_content  
      font-size 15px
      color #999999
      line-height 20px
      font-family PingFangSC-Regular, PingFang SC