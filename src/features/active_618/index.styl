#active-618
  min-height 100vh
  background url('../../assets/active_618/bg.png') no-repeat top center/100% auto
  background-color #FF4E52
  overflow auto
  padding-bottom 56px
  &.platform1
    background-image url('../../assets/active_618/bg_platform1.png')
  .active-rule
    width 65px
    height 20px
    background #FF8D76
    border-radius 10px 0 0 10px
    font-size 13px
    color #ffffff
    line-height 20px
    text-align center
    position absolute
    right 0
    top 58px
  .recharge-box
    box-sizing border-box
    padding 0 5px
    display flex
    justify-content space-around
    margin-top 322px
    .recharge-item
      width 176px
      height 245px
      background url('../../assets/active_618/recharge_one.png') no-repeat center center/100% 100%
      &:last-of-type
        background-image url('../../assets/active_618/recharge_two.png')
      .recharge-item-btn
        width 104px
        height 29px
        background url('../../assets/active_618/now_get_btn.png') no-repeat center center/100% 100%
        margin 189px auto 0
      .recharge-item-time
        margin 189px auto 0
        font-size 0
        color #C1C1C1
        font-weight bold
        display flex
        align-items center
        justify-content center
        height 28px
        line-height 28px
        position relative
        font-size 28px
        transform scale(0.5)
        transform-origin left
        div
          box-sizing border-box
          white-space nowrap
          position absolute
          &:nth-of-type(1)
            left 20px
          &:nth-of-type(2)
            left 120px
          &:nth-of-type(3)
            left 180px
          &:nth-of-type(4)
            left 240px
          &:nth-of-type(5)
            left 300px
          &.mine-time
            text-align center
            width 28px
            background-color #C1C1C1
            border-radius 16px
            color #ffffff
            width 56px
            height 56px
            line-height 56px
  .notice-list
    height 110px
    width 329px
    margin 28px auto 0
    .notice-swiper
      height 100%
      box-sizing border-box
      .notice-swiper-slide
        font-size 14px
        display flex
        align-items center
        justify-content center
        border-radius 50px
        box-sizing border-box
        img
          width 25px
          height 25px
          border-radius 50%
          margin-right 13px
        .notice-nickname
          color #ffffff
          font-size 12px
        .notice-award
          color #F5D138
          font-weight bold
  .more-game
    width 344px
    height 546px
    background url('../../assets/active_618/more_game.png') no-repeat center center/100% 100%
    margin 20px auto 0
    overflow hidden
    position relative
    .game-time
      font-size 0
      color #C1C1C1
      font-weight bold
      display flex
      align-items center
      justify-content flex-start
      position relative
      font-size 28px
      transform scale(0.5)
      transform-origin left
      div
        box-sizing border-box
        white-space nowrap
        position absolute
        &:nth-of-type(1)
          left 20px
        &:nth-of-type(2)
          left 120px
        &:nth-of-type(3)
          left 180px
        &:nth-of-type(4)
          left 240px
        &:nth-of-type(5)
          left 300px
        &.mine-time
          text-align center
          width 28px
          background-color #C1C1C1
          border-radius 16px
          color #ffffff
          width 56px
          height 56px
          line-height 56px
    .game-one
      margin-top 187px
      margin-left 40px
      .game-time
        margin-top 200px
        margin-left -10px
      .game-btn
        width 104px
        height 29px
        background url('../../assets/active_618/free_get_btn.png') no-repeat center center/100% 100%
    .game-two
      margin-top 111px
      margin-left 40px
      .game-time
        margin-top 140px
        margin-left -10px
      .game-btn
        width 104px
        height 29px
        background url('../../assets/active_618/crush_egg.png') no-repeat center center/100% 100%
    .game-three
      position absolute
      top 468px
      margin-left 40px
      width 104px
      height 29px
      background url('../../assets/active_618/now_draw_award.png') no-repeat center center/100% 100%
  .member-power
    width 363px
    height 165px
    background url('../../assets/active_618/member_power.png') no-repeat center center/100% 100%
    margin 28px auto 0
  .active-book-box
    width 363px
    height 502px
    background url('../../assets/active_618/more_book_bg.png') no-repeat center center/100% 100%
    margin 28px auto 0
    box-sizing border-box
    padding 0 30px
    overflow hidden
    .active-book-list
      margin-top 78px
      display flex
      flex-wrap wrap
      justify-content space-between
      .active-book-item
        margin-bottom 16px
        img
          width 93px
          height 121px
          box-shadow 0px 0px 4px 0px rgba(117,117,117,0.38)
          border-radius 2px
        div
          width 93px
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
          font-size 14px
          color #666666
    .active-book-btn
      width 234px
      height 50px
      background url('../../assets/active_618/more_book_btn.png') no-repeat center center/100% 100%
      margin 0 auto

.notice-list .notice-swiper .swiper-slide {
  transition: transform 1s;
  transform: scale(0.8);
  background: rgba(216,25,33,0.62);
}
.notice-list .notice-swiper .swiper-slide-active,.notice-list .notice-swiper .swiper-slide-duplicate-active {
  transform: scale(1);
  background: #D81921;
}
.notice-swiper .swiper-slide:before{
  background: transparent;
}