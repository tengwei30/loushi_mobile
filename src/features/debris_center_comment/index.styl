.debris_comment
  .left_img
    width 28px
    height 28px
  .debris_comment_info
    padding 20px
    box-sizing border-box
    display flex
    img
      width 51px
      height 51px
      margin-right 24px
    .debris_comment_info_text
      font-size 18px
      background linear-gradient(203deg, #FFC87A 0%, #F43A3A 100%) 
      -webkit-background-clip text
      -webkit-text-fill-color transparent
      color #333333
  .debris_comment_content
    .debris_comment_textarea_box
      position relative
      width 335px
      height 300px
      box-sizing border-box
      padding 13px 10px
      background #F9F9F9
      left 50%
      transform translateX(-50%)
      border-radius 10px
      font-size 14px
      color #000000
      .debris_comment_textarea
        width 100%
        height 240px
        box-sizing border-box
        font-weight 400
        line-height 18px
        overflow scroll
        outline none
        border none
        background #F9F9F9
      .debris_comment_textarea_count
        font-size 12px
        color #999999
        position absolute
        height 40px
        line-height 40px
        bottom 0
        right 0
        padding-right 10px
        box-sizing border-box
        width 100%
        text-align right
        background #F9F9F9
  .debris_img_box
    display flex
    box-sizing border-box
    padding 0 20px
    margin-top 25px
    .debris_img_item
      width 94px
      height 80px
      margin-right 25px
      position relative 
      font-size 0
      box-sizing border-box
      &:last-of-type
        margin 0
      img
        width 100%
        height 100%
        border-radius 10px
      .debris_img_delete
        width 18px
        height 18px
        background url('../../assets/debris_comment/debris_comment_delete.png') no-repeat center/100%
        border-radius 50%
        border 2px soldi #ffffff
        position absolute
        top -9px
        right -9px
    .debris_img_upload
      width 94px
      height 80px
      box-sizing border-box
      position relative
      input
        opacity 0
        left 0
        top 0
        width 100%
        height 100%
        position absolute
  .debris_comment_btn
    width 85px
    height 36px
    border-radius 18px
    line-height 36px
    text-align center
    font-size initial
    color #ffffff
    font-weight 400
    background #E0E0E0
    margin 25px auto
    &.active
      background linear-gradient(to right,#F43A3A, #FFC87A)

.debris_comment_textarea:empty:not(:focus):before {
  content: '请输入评论内容';
  white-space: pre;
  color: #999999;
  font-size: 14px;
}